set number
colorscheme molokai

map <F5> :call CompileRunGcc()<CR>
map <F8> : call CompileGcc()<CR>
map <C-n> : NERDTreeToggle<CR>
map <C-right> :tabnext<CR>
map <C-left> :tabprevious<CR>

set cindent
set smartindent
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2

func! CompileRunGcc()
  exec "w" 
  exec "!g++ % -o %< "
  exec "i" 
endfunc

func! CompileGcc()
  exec "w"
  exec "!g++ % -o %< && IF EXIST %<"
  exec "i"
endfunc
