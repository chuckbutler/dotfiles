

# Edit files
alias e='$EDITOR $1'
# Zip directory
alias zipr='zip -r'

# Manage Bash Stuff
alias reload='source ~/.bashrc'
alias ea='$EDITOR ~/bin/dotfiles/bash/aliases && reload'
alias er='$EDITOR ~/bin/dotfiles/bash/bashrc && reload'
alias ee='$EDITOR ~/bin/dotfiles/bash/env && reload'

# Processes
alias tu='top -o cpu' #cpu
alias tm='top -o vsize' #memory
alias psb='ps aux | less'
alias psg='ps aux | grep $*'

# File Manager
alias o='nautilus . &'

# Package Management
alias csearch='apt-cache search $*'
alias agi='sudo apt-get install $*'

# Git
alias g='git status'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gd='git diff'
alias gp='git push'
alias ga='git add'


# Commit pending changes and quote all arts as message
function gg() {
  git commit -v -a -m "$*"
}

# Directory Commands
alias ..='cd ..'
alias cdd='cd -'

#Amusing, top10
function top10() {
  history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head
}

# Give me my colors back - i miss them
alias ls='ls --color'
